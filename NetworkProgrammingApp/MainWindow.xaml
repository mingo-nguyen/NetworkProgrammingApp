<Window x:Class="NetworkProgrammingApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NetworkProgrammingApp"
        mc:Ignorable="d"
        Title="Order Client" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBox x:Name="FoodListTextBox" Width="300" Height="30" Margin="10" 
                     GotFocus="FoodListTextBox_GotFocus" LostFocus="FoodListTextBox_LostFocus" Text="Enter Food List"/>
            <TextBox x:Name="AddressTextBox" Width="300" Height="30" Margin="10" 
                     GotFocus="AddressTextBox_GotFocus" LostFocus="AddressTextBox_LostFocus" Text="Enter Address"/>
            <Button Content="Send Order" Width="100" Height="30" Margin="10" Click="SendOrderButton_Click"/>
            <ListBox x:Name="ConfirmationListBox" Width="300" Height="200" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
